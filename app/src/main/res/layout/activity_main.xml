<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.v_zakudong.customcamerafunc.MainActivity">


    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_picture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="拍照"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#989898"/>
        <RadioButton
            android:id="@+id/rb_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="录制"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FF989898"/>
        <RadioButton
            android:id="@+id/rb_anchorlist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="计算"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FF989898"/>
        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="其他"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FF989898"/>
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/devider"
        android:layout_above="@id/rb_group"
        android:background="#FF989898"/>
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/devider"
        android:orientation="vertical"/>
    <!--分辨率选择下拉框-->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:spinnerMode="dropdown"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:layout_margin="10dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
